<?php
// Processa o formulário quando ele é enviado
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    // Coletando os dados do formulário
    $idReceita = $_POST['idReceita'];
    $nomeReceita = $_POST['nomeReceita'];
    $idCozinheiro = $_POST['idCozinheiro'];
    $quantidade = $_POST['quantidade'];
    $medida = $_POST['medida'];
    $ingrediente = $_POST['ingrediente'];
    $modoPreparo = $_POST['modoPreparo'];
    echo "<h2>Receita: $nomeReceita</h2>";
    echo "<p>ID Receita: $idReceita</p>";
    echo "<p>ID Cozinheiro: $idCozinheiro</p>";
    echo "<p>Ingredientes:</p>";
    echo "<ul>";
    echo "<li>$quantidade $medida de $ingrediente</li>";
    echo "</ul>";
    echo "<p>Modo de Preparo: $modoPreparo</p>";
}
?>

