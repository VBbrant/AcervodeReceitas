        <?php
        if ($_SERVER['REQUEST_METHOD'] == 'POST') {
            $idAvaliacao = $_POST['idAvaliacao'] ?? null;

            if ($idAvaliacao) {
                echo "<p class='text-green-400 mb-4'>Avaliação $idAvaliacao removida com sucesso!</p>";
            } else {
                echo "<p class='text-red-400 mb-4'>Erro ao remover a avaliação. ID inválido.</p>";
            }
        }
        ?>