<?php
// Processa o formulário quando ele é enviado
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    // Coletando os dados do formulário
    $idReceita = $_POST['idReceita'];
    $idCozinheiro = $_POST['idCozinheiro'];
    $avaliacao = $_POST['avaliacao'];
    $descricaoAvaliacao = $_POST['descricaoAvaliacao'];

    // Você pode salvar esses dados em um banco de dados ou processá-los conforme necessário
    // Exemplo de saída dos dados
    echo "<h2>Avaliação enviada para a receita de ID: $idReceita</h2>";
    echo "<p>ID do Cozinheiro: $idCozinheiro</p>";
    echo "<p>Avaliação: $avaliacao estrelas</p>";
    echo "<p>Descrição da Avaliação: $descricaoAvaliacao</p>";
}
?>